<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

  <header>
    <%- include('../partials/nav'); %>
  </header>

  <main>
    <div class="row justify-content-evenly home-body">
      <div class="col-4">
        <form>
          <div class="row justify-content-between">
            <div class="form-check form-control-custom">
              <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
              <label class="form-check-label" for="flexRadioDefault1">
                Diálisis
              </label>
            </div>

            <div class="form-check form-control-custom">
              <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
              <label class="form-check-label" for="flexRadioDefault1">
                Oncología
              </label>
            </div>
          </div>
          <select class="form-select form-control-custom" aria-label="Provincia">
            <option selected>Elegir provincia</option>
            <option value="1">Santa fe</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
          <select class="form-select form-control-custom" aria-label="Ciudad">
            <option selected>Elegir ciudad</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>

          <div class="card">
            <div class="card-body">
              <div class="form-check form-control-custom">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  Sistema privado
                </label>
              </div>
              <br>
              <select class="form-select form-control-custom" aria-label="Ciudad">
                <option selected>Elegir ciudad</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </div>
          <div class="btn-container">
            <div class="row justify-content-evenly">
              <div class="col-6">
                <button type="submit" class="btn btn-primary full-width">Limpiar filtros</button>
              </div>
              <div class="col-6">
                <button type="submit" class="btn btn-primary full-width">Buscar</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-8">
        <div id="mapid"></div>
      </div>

    </div>

  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>

<script>
  var mymap = L.map('mapid').setView([-32.94210704622841, -60.65314387346393], 13);

  L.tileLayer('https://{s}.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png', {
    attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, <a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery © <a href="http://cloudmade.com">CloudMade</a>',
    maxZoom: 18
  }).addTo(mymap);
</script>

<style>
  #mapid {
    height: 25rem;
  }
</style>

</html>
